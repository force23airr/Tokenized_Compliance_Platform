# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rwa_platform

# Redis (optional - set USE_MOCK_QUEUE=true if Redis not available)
REDIS_URL=redis://localhost:6379
USE_MOCK_QUEUE=false

# Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY

# Private Keys (NEVER commit actual keys)
DEPLOYER_PRIVATE_KEY=

# API Security
JWT_SECRET=your-super-secret-jwt-key-change-this
API_KEY_SALT=your-api-key-salt-change-this
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# External Services
FIREBLOCKS_API_KEY=
FIREBLOCKS_API_SECRET=
CHAINALYSIS_API_KEY=
ELLIPTIC_API_KEY=

# AI Compliance Engine
AI_COMPLIANCE_API_URL=http://localhost:8000

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-change-this

# Monitoring
SENTRY_DSN=
